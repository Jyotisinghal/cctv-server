<%= form_for @customer, remote: true do |f| %>
	
   	<div class="breadcrumb">
    	<div class="card-header">
      		<div class="logo">
			<center><%= image_tag("logo.png") %></a></center>
		</div>
    	</div>
    	<table class="breadcrumb-item table-responsive">
      		<tbody>
        		<tr>
          			<td><strong>DOME CAMERA:</strong><input type="number" class="form-control initialQty" id="dome" placeholder="  QUANTITY..." ></td>
          			<td><strong>BULLET CAMERA:</strong><input type="number" class="form-control initialQty" id="bullet" placeholder="  QUANTITY..." ></td>
          			<td><strong>TOTAL CAMERA:  </strong><br><span id="totalqty">0</span></td>
        		</tr>
      		</tbody>
    	</table>
  	</div> 
  	
	
	<%= render 'item', f: f %></br>
	<center><a class="btn btn-primary proceed" data-toggle="modal" data-target="#customer-model" id="customerModel" ><i class="fa fa-hand-o-up"></i> PROCEED</a></center>

	<div class="modal fade" id="customer-model" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
	    
	    <div class="modal-dialog modal-md" id= "customermm">
	      	
	      	<div class="modal-content">
	        	
	        	<div class="container-fluid invoice_wrapper">
	          		<%= render 'customer', f: f %> 
	        	</div>
	      	
	      	</div>
	    
	    </div>
	
	</div>
	
<% end %>