	<div class="modal fade" id="customer-model" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" style="background-color: rgba(93, 103, 106, 0.31);margin-top: 140px">
	    <div class="modal-dialog modal-lg" id= "customermm">
	      	<div class="modal-content" style="background-color: #1d1d1e">
	        	<div class="container-fluid invoice_wrapper" style="margin:5px">
