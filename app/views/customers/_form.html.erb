<%= form_for @customer, remote: true do |f| %>
	
	<%= render 'shared/error_messages' %>

   	<div class="breadcrumb" style="background-color: #000000;">
    	<div class="card-header">
      		<h2 style="color: white;">CAMERA</h2>
    	</div>
    	<table class="breadcrumb-item table">
      		<tbody>
        		<tr>
          			<td><strong>DOME CAMERA:</strong><input type="number_field" class="form-control initialQty" id="dome" placeholder="  QUANTITY..." ></td>
